%>
<%
columns = [{
    field: "id",
    label: "ID",
    sort: true
}, {
    field: "fullname",
    label: "name",
    sort: true
}, {
    field: "email",
    label: "email",
    sort: true
}, {
    field: "rolenames",
    label: "roles",
    sort: true
}, {
    field: "active",
    label: "status",
    sort: true,
    custom: true
}, {
    field: "current_sign_in_at_string",
    label: "last_sign_in",
    sort: true
}]
%>
<%= render LesliView::Layout::Container.new('shield-invites') do %>
    <%= render LesliView::Components::Header.new('Invites') do %>
        <%= render(LesliView::Elements::Button.new('Send invite', url: new_invite_path, icon: "add", solid:true)) %>
        <%= render(LesliView::Elements::Button.new(icon: 'refresh')) %>
    <% end %>
    <%= render LesliView::Components::Toolbar.new() %>
    <%= render(LesliView::Elements::Table.new(
        columns: columns,
        records: @invites[:records],
        link: lambda {|invite| invite_path(invite.id) }
    )) %>
<% end %> 
